<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ad's"
            android:textAllCaps="false"
            android:textColor="@color/kp_red"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" Photos"
            android:textAllCaps="false"
            android:textColor="@color/kp_blue"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/images_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/main_image_prev"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/photo_preview" />

            <android.support.v7.widget.CardView
                android:id="@+id/main_image_cross"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_alignRight="@+id/main_image_prev"
                android:layout_marginRight="3dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/kp_red"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/cross_sign" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_image_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_alignBottom="@+id/main_image_prev"
                android:layout_alignRight="@+id/main_image_prev"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                app:cardBackgroundColor="@color/kp_blue"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/plus_sign" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:stretchColumns="*">

            <TableRow>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/other_image_1"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/photo_preview" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_1_cross"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignRight="@+id/other_image_1"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/kp_red"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/cross_sign" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_1_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignBottom="@+id/other_image_1"
                        android:layout_alignRight="@+id/other_image_1"
                        app:cardBackgroundColor="@color/kp_blue"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/plus_sign" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/other_image_2"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/photo_preview" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_2_cross"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignRight="@+id/other_image_2"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/kp_red"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/cross_sign" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_2_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignBottom="@+id/other_image_2"
                        android:layout_alignRight="@+id/other_image_2"
                        app:cardBackgroundColor="@color/kp_blue"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/plus_sign" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </TableRow>

            <TableRow>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/other_image_3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/photo_preview" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_3_cross"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignRight="@+id/other_image_3"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/kp_red"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/cross_sign" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_3_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignBottom="@+id/other_image_3"
                        android:layout_alignRight="@+id/other_image_3"
                        app:cardBackgroundColor="@color/kp_blue"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/plus_sign" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/other_image_4"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/photo_preview" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_4_cross"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignRight="@+id/other_image_4"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/kp_red"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/cross_sign" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/other_image_4_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_alignBottom="@+id/other_image_4"
                        android:layout_alignRight="@+id/other_image_4"
                        app:cardBackgroundColor="@color/kp_blue"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/plus_sign" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/images_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kp_blue"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false">

            <TextView
                android:id="@+id/next_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="           Next          "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>